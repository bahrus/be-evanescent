{
  "name": "be-evanescent",
  "version": "0.0.6",
  "description": "be-evanescent is a web component decorator that removes the element it adorns from the DOM tree when the web component definitions it monitors for become registered.",
  "main": "be-evanescent.js",
  "module": "be-evanescent.js",
  "keywords": [
    "web-components",
    "web-component",
    "custom-element",
    "custom-elements",
    "FOUC",
    "transient-style"
  ],
  "scripts": {
    "test": "playwright test",
    "serve": "node node_modules/may-it-serve/serve.js",
    "package-check": "package-check"
  },
  "dependencies": {
    "be-decorated": "0.0.157",
    "be-hive": "0.0.65"
  },
  "devDependencies": {
    "may-it-serve": "0.0.2",
    "@skypack/package-check": "0.2.2",
    "@playwright/test": "1.25.2",
    "@custom-elements-manifest/analyzer": "0.6.4"
  },
  "files": [
    "*.*"
  ],
  "exports": {
    ".": "./be-evanescent.js",
    "./be-evanescent.js": "./be-evanescent.js"
  },
  "types": "types.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahrus/be-evanescent.git"
  },
